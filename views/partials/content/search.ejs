<div class="container">
    <div class="searchWrap">
        <div class="radioWrap">
          <span class="legend">Search by: </span>
          <div class="container-title">
            <input type="radio" id="radio-title" name="typeFilter" value="titles" checked="checked"/> <label for="radio-title">title</label> 
          </div>
          <div class="container-people">
            <input type="radio" id="radio-people" name="typeFilter" value="people"/> <label for="radio-people">actor, director</label>
          </div>
        </div>
        <form id="searchForm">
          <div class="row">
              <div class="iconSVG">
                  <img src="/images/magglass.svg" aria-hidden="true">
              </div>
            <div class="col-md-9 col-lg-10 form-column">
                <input required type="text" class="form-control" id="searchText" placeholder="Type the name of the title you want to watch...">
            </div>
            <div class="col-md-3 col-lg-2 form-column">
                <button class="btn  btnSend" type="submit">Search</button>
            </div>
          </div>
        </form>
    </div>
</div>